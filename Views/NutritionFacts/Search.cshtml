@model Search
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div>
    @using(Html.BeginForm("Results", "NutritionFacts", FormMethod.Get))
    {
        @Html.TextBoxFor(model => model.SearchString)
        @Html.ValidationMessageFor(model => model.SearchString, "", new {@class= "text-danger"})
        
        <button type="submit">Submit</button>
    }
</div>

